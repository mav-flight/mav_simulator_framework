<launch>
  <!-- Launch Arguments -->
  <arg name="mav_name" default="hummingbird"/>
  <arg name="world_name" default="basic"/>
  <arg name="debug" default="false"/>
  <arg name="gui" default="true"/>
  <arg name="paused" default="true"/>
  <arg name="verbose" default="false"/>

  <!-- -->
  <include file="$(find-pkg-share gazebo_ros)/launch/gazebo.launch.py">
    <arg name="world_name" value="$(find-pkg-share mav_gazebo)/worlds/$(var world_name).world"/>
    <arg name="debug" value="$(var debug)"/>
    <arg name="paused" value="$(var paused)"/>
    <arg name="gui" value="$(var gui)"/>
    <arg name="verbose" value="$(var verbose)"/>
  </include>

  <!-- -->
  <group scoped="true">
    <include file="$(find-pkg-share mav_gazebo)/launch/spawn_mav.launch.xml">
      <arg name="mav_name" value="$(var mav_name)"/>
      <arg name="mav_model" value="$(find-pkg-share mav_description)/urdf/$(var mav_name).xacro"/>
    </include>
  </group>
</launch>
